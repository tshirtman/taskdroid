BoxLayout:
    orientation: 'vertical'
    Label:
        text: 'Task'
        size_hint_y: None
        height: self.texture_size[1]

    BoxLayout:
        size_hint_y: None
        height: '48dp'
        TextInput:
            multiline: False

            on_text_validate:
                app._run_task(self.text)
                #self.text = ''
        Button:
            size_hint_x: None
            width: '48dp'
            on_press: app.output = []

    RecycleView:
        data: app.tasks
        viewclass: 'TaskListItem'


